head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Urban Farmer details
  link(rel='stylesheet', type='text/css', href='../css/style.css')
.container
  header
    h1#title MASSAJJA URBAN FARMER INITIATIVE
  #form-wrapper
    form#register-form(action='/register', method='post')
      .container2
        .padding.width
          select#role(name='role')
            option(value='select your role') Role
            |                 &gt;
            option(value='FO') FO
            option(value='UF') UF
      .padding
        input#datetoday.form-control-2(type='date', name='datetoday', placeholder='date')
      .padding
        input#names.form-control-2(type='text', name='names', placeholder='Fullname')
      .padding
        input#dateofbirth.form-control-2(type='date', name='dateofbirth', placeholder='dateOfBirth')
      .container2
        .padding
          select#ward(name='ward')
            option(value='select your Ward') Select Ward
            |                 &gt;
            option(value='WardA') Ward A
            option(value='wardB') ward B
            option(value='wardC') ward C
        .padding
          select#dropdown(name='gender')
            option(value='select your Gender') Select Gender
            |                 &gt;
            option(value='Male') Male
            option(value='Female') Female
            option(value='Secret') Secret
        .padding
          select#activity(name='activity')
            option(value='select activity') Activity done
            |                 &gt;
            option(value='Dairy') Dairy
            option(value='Poultry') Poultry
            option(value='Hoticulture') Hoticulture
        .padding
          select#residence(name='residence')
            option(value='select residence type') Select Residence
            |                 &gt;
            option(value='Permanent') Permanent
            option(value='Temporary') Temporary
            option(value='Others') Others
        .padding
          input#username.form-control-2.form-float.width2(type='text', name='username', placeholder='User name')
      .container3
        .padding
          input#foid.form-control-2(type='text', name='foid', placeholder='FO Id')
        .padding
          input#nid.form-control(type='text', name='nid', placeholder='NIN')
        .padding
          input#phone.form-control-2(type='text', name='phone', placeholder='Phone')
        .padding
          input#yearsofstay.form-control-2.form-float(type='text', name='yearsofstay', placeholder='Years stayed')
        .padding
          input#password.form-control-2.form-float(type='text', name='password', placeholder='Password')
      .padding
        input#address.form-control-2.form-float(type='text', name='address', placeholder='Adress')
      p.null-field
      button#submit(type='submit') Register
  p.copyright
    | &copy; Massajja Ubarn farmer initiative. All rights reserved!
  script(src='/validate.js')
